.ifos AmigaOS
.include /DMakefile.inc
.else
.include ../DMakefile.inc
.endif

SRCS= main.c cexp.c cpp.c define.c direct.c include.c \
        precomp.c subs.c sym.c

OBJS= $(SRCS:"*.c":"$(OD)dcpp_*.o")

EXE= $(OD)dcpp
EXED= $(BIN)dcpp

PROTOS= $(OD)dcpp-protos.h

all: $(PROTOS) $(EXE)

$(EXE) : $(OBJS)
        $(CC) $(CFLAGS) $(OBJS) -o $(EXE)

$(OBJS) : $(SRCS)
        $(CC) $(CFLAGS) %(right) -o %(left) -c

$(PROTOS) : $(SRCS)
        -$(RM) $(PROTOS) $(PROTOS).new
        $(MAKEPROTO) $(SRCS) >$(PROTOS)

install:
        $(INSTALL) $(EXE) $(EXED)

clean:
        -$(RM) $(PROTOS) $(OBJS) $(EXE)

