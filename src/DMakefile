
bin-core:   DCC DCPP DC1 DAS DLINK DXMAKE DOBJ DUTILCORE

bin-all:    bin-core DUTIL DME

.ifos AmigaOS
UP = /
.else
UP = ../
.endif

DCC:
        cd dcc
        dmake
        cd $(UP)

DCPP:
        cd dcpp
        dmake
        cd $(UP)

DC1:
        cd dc1
        dmake
        cd $(UP)

DAS:
        cd das
        dmake
        cd $(UP)

DLINK:
        cd dlink
        dmake
        cd $(UP)

DXMAKE:
        cd dmake
        dmake
        cd $(UP)

DOBJ:
        cd dobj
        dmake
        cd $(UP)

DUTIL:
        cd dutil
        dmake
        cd $(UP)

DUTILCORE:
        cd dutil
        dmake core
        cd $(UP)

DME:
        cd dme
        dmake
        cd $(UP)

install-bin-core:
        cd dcc
        dmake install
        cd $(UP)dcpp
        dmake install
        cd $(UP)dc1
        dmake install
        cd $(UP)das
        dmake install
        cd $(UP)dlink
        dmake install
        cd $(UP)dmake
        dmake install
        cd $(UP)dobj
        dmake install
        cd $(UP)dutil
        dmake install-core
        cd $(UP)

install-bin-all: install-bin-core
        cd dutil
        dmake install
        cd $(UP)dme
        dmake install
        cd $(UP)

clean:
        (cd dcc; dmake clean)
        (cd dcpp; dmake clean)
        (cd dc1; dmake clean)
        (cd das; dmake clean)
        (cd dlink; dmake clean)
        (cd dmake; dmake clean)
        (cd dobj; dmake clean)
        (cd dutil; dmake clean)

