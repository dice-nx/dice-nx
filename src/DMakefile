
bin-core:   DCC DCPP DC1 DAS DLINK DXMAKE DOBJ DUTILCORE

bin-all:    bin-core DUTIL DME

.ifos AmigaOS
UP = /
.else
UP = ../
.endif

DCC:
        cd dcc
        dxmake
        cd $(UP)

DCPP:
        cd dcpp
        dxmake
        cd $(UP)

DC1:
        cd dc1
        dxmake
        cd $(UP)

DAS:
        cd das
        dxmake
        cd $(UP)

DLINK:
        cd dlink
        dxmake
        cd $(UP)

DXMAKE:
        cd dxmake
        dxmake
        cd $(UP)

DOBJ:
        cd dobj
        dxmake
        cd $(UP)

DUTIL:
        cd dutil
        dxmake
        cd $(UP)

DUTILCORE:
        cd dutil
        dxmake core
        cd $(UP)

DME:
        cd dme
        dxmake
        cd $(UP)

install-bin-core:
        cd dcc
        dxmake install
        cd $(UP)dcpp
        dxmake install
        cd $(UP)dc1
        dxmake install
        cd $(UP)das
        dxmake install
        cd $(UP)dlink
        dxmake install
        cd $(UP)dxmake
        dxmake install
        cd $(UP)dobj
        dxmake install
        cd $(UP)dutil
        dxmake install-core
        cd $(UP)

install-bin-all: install-bin-core
        cd dutil
        dxmake install
        cd $(UP)dme
        dxmake install
        cd $(UP)

clean:
        (cd dcc; dxmake clean)
        (cd dcpp; dxmake clean)
        (cd dc1; dxmake clean)
        (cd das; dxmake clean)
        (cd dlink; dxmake clean)
        (cd dxmake; dxmake clean)
        (cd dobj; dxmake clean)
        (cd dutil; dxmake clean)

