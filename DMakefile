
.include DMakefile.inc

OUTDIRS= ulib ubin dlib obj
ISUBDIRS= config include dlib lib bin

# all:    $(OUTDIRS)
#         ( cd suplib; dmake; dmake install )
#         ( cd src; dmake )
#         ( cd lib; dmake all )
#         ( cd include; dmake )
#         ( cd config; dmake )
all:
        cd $(TOPDIR)src
        dmake
        cd
        cd $(TOPDIR)lib
        dmake -f DMakefile.amiga

bin-core:
        cd $(TOPDIR)src
        dmake bin-core
        cd $(TOPDIR)

bin-all:
        cd $(TOPDIR)src
        dmake bin-all
        cd $(TOPDIR)

install-bin-core:
        cd $(TOPDIR)src
        dmake install-bin-core
        cd $(TOPDIR)

install-bin-all:
        cd $(TOPDIR)src
        dmake install-bin-all
        cd $(TOPDIR)

lib-core:
        cd $(TOPDIR)lib
        dmake -f DMakefile.amiga core

$(OUTDIRS) : $(OUTDIRS)
        $(MKDIR) %(left)

#install:        $(INSTDIR) $(ISUBDIRS:"*":"$(INSTDIR)/*") dummy
install:
       -$(MKDIR) $(INSTDIR)
       -$(MKDIR) $(INSTDIR)/bin
       -$(MKDIR) $(INSTDIR)/config
       -$(MKDIR) $(INSTDIR)/include
       -$(MKDIR) $(INSTDIR)/dlib
       -$(MKDIR) $(INSTDIR)/lib
       -$(MKDIR) $(INSTDIR)/bin
       $(CHMOD) 755 $(INSTDIR)
       $(CHMOD) 755 $(INSTDIR)/config
       $(CHMOD) 755 $(INSTDIR)/include
       $(CHMOD) 755 $(INSTDIR)/dlib
       $(CHMOD) 755 $(INSTDIR)/lib
       $(CHMOD) 755 $(INSTDIR)/bin
       cd src
       dmake install
#        ( cd lib; dmake install )
#        ( cd include; dmake install )
#        ( cd config; dmake install )


dummy:

#$(ISUBDIRS:"*":"$(INSTDIR)/*"): $(INSTDIR)
#        $(MKDIR) %(left)

#$(INSTDIR): $(INSTDIR)
#        $(MKDIR) %(left)

clean:
        ( cd suplib; dmake clean )
        ( cd src; dmake clean )
        ( cd lib; dmake clean )
        $(RM) -f dlib/*.o dlib/*.lib
        $(RM) -rf $(OUTDIRS)

zip:
        -$(RM) dice_binary.zip
        -$(RM) -rf binrel
        $(MKDIR) binrel
        cp -r README.BINARY DICE-LICENSE.TXT suplib/ dlib/ doc/ ubin/ ulib/ lib/ binrel/
        $(MKDIR) binrel/config
        cp config/dice.errors binrel/config
        $(MKDIR) binrel/include
        cp include/*.h binrel/include
        cp -r include/lib binrel/include
        -find binrel -name CVS -exec $(RM) -rf {} \;
        $(RM) -rf binrel/include/amiga20
        $(RM) -rf binrel/include/amiga30
        $(RM) -rf binrel/lib/obj3
        cd binrel; zip -r ../dice_binary.zip *
        #$(RM) -rf binrel


